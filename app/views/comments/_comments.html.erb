<% if event.comments.any? %>

    <div class="message">
      <h3>All comments</h3>
      <% event.comments.latest(3).each do |comment| %>
          <% if comment.user.present? %>

              <p>
                <h4>
                  <i class="fa fa-male" aria-hidden="true"> <%= comment.user.email %></i>
              <p>Comment: <%= comment.body %><p>
              <p><%= link_to "Delete Comment", event_comment_path(comment), method: :delete,
                             data: {confirm: "Are you sure you want to delete this ticket?"},
                             class: "btn btn-warning btn-xs" %></p>
              </h4>

              </p>
          <% end %>
      <% end %>
    </div>
<% end %>