<%= link_to 'Create new event', new_event_path, class: "new" %>
<p id="notice"><%= notice %></p>
<form ng-submit="addEntry">
  <input type="text" ng-model="newEntry.name">
</form>
<ul>
  <li ng-repeat="entry in entries">
    {{entry.name}}
    <span ng-show="entry.winner" ng-class="{highlight: entry ==lastWinner}" class="winner">Winner</span>
  </li>
</ul>
<button ng-click="drawWinner()">Draw Winner</button>
<h1>Your Events</h1>

<table id="attributes">
  <thead>
  <tr class="warning">
      <th><h4>Info</h4></th>
      <th><h4>Place</h4></th>
      <th><h4>Time</h4></th>
      <th><h4>Description</h4></th>

    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="active">
        <td><%=link_to 'More Info', event_path(event['id']),class: "new" %></td>
        <td><h4><%= event['place'] %></h4></td>
        <td><h4><%= event['time'].localtime.strftime("%d %b. %Y %H:%M") if event[:time].present? %></h4></td>
        <td><h4><%= event['description']%></h4></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



